<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.cool.dao.SysDicMapper">
	<resultMap type="com.cool.model.SysDic" id="resultMap">
		<id column="id" property="id"/>
		<result column="category" property="category"/>
		<result column="category_name" property="categoryName"/>
		<result column="code_value" property="codeValue"/>
		<result column="code_text" property="codeText"/>
		<result column="sort_no" property="sortNo"/>
		<result column="editable" property="editable"/>
		<result column="enable" property="enable"/>
		<result column="remark" property="remark"/>
		<result column="create_by" property="createBy"/>
		<result column="create_time" property="createTime"/>
		<result column="update_by" property="updateBy"/>
		<result column="update_time" property="updateTime"/>
	</resultMap>
	<sql id="allFields">
	id,category,category_name,code_value,code_text,sort_no,editable,enable,remark,create_by,create_time,update_by,update_time
	</sql>
	<insert id="insert" parameterType="Object">
		insert into sys_dic
		<trim prefix="(" suffix=")" suffixOverrides="," >
			<if test="id != null">
				id,
			</if>
			<if test="category != null and category != ''">
				 category,
			</if>
			<if test="categoryName != null and categoryName != ''">
				 category_name,
			</if>
			<if test="codeValue != null and codeValue != ''">
				 code_value,
			</if>
			<if test="codeText != null and codeText != ''">
				 code_text,
			</if>
			<if test="sortNo != null">
				 sort_no,
			</if>
			<if test="editable != null">
				 editable,
			</if>
			<if test="enable != null">
				 enable,
			</if>
			<if test="remark != null and remark != ''">
				remark,
			</if>
			<if test="createBy != null and createBy != ''">
				create_by,
			</if>
			<if test="createTime != null">
				create_time,
			</if>
		</trim>
		values 
		<trim prefix="(" suffix=")" suffixOverrides="," >
			<if test="id != null">
				#{id},
			</if>
			<if test="category != null and category != ''">
				 #{category},
			</if>
			<if test="categoryName != null and categoryName != ''">
				 #{categoryName},
			</if>
			<if test="codeValue != null and codeValue != ''">
				 #{codeValue},
			</if>
			<if test="codeText != null and codeText != ''">
				 #{codeText},
			</if>
			<if test="sortNo != null">
				 #{sortNo},
			</if>
			<if test="editable != null">
				 #{editable},
			</if>
			<if test="enable != null">
				 #{enable},
			</if>
			<if test="remark != null and remark != ''">
				#{remark},
			</if>
			<if test="createBy != null and createBy != ''">
				#{createBy},
			</if>
			<if test="createTime != null">
				#{createTime},
			</if>
		</trim>
	</insert>
	<!-- 删除记录 -->
	<delete id="deleteByPrimaryKey" parameterType="Object">
		delete from sys_dic where id = #{id}
	</delete>

	<!-- 根据id查询 -->
	<select id="selectByPrimaryKey"  resultMap="resultMap" parameterType="java.lang.Long">
		select <include refid="allFields" />
		 from sys_dic
		 where id = #{id}
	</select>

	<!-- 列表总数-->
	<select id="query" resultType="java.lang.Long"  parameterType="Object">
		select id from sys_dic
		<include refid="whereSql"></include>
	</select>
	<!-- 分页查询 -->
	<select id="queryForList" parameterType="Object" resultMap="resultMap">
		select <include refid="allFields"></include> 
		from sys_dic
		<include refid="whereSql"></include>
	</select>
	
	<select id="deleteAllByPrimaryKey" parameterType="Object">
		delete from sys_dic
		where id in
		<foreach item="id" collection="list" open="(" close=")" separator=",">
             #{id}
        </foreach>
	</select>

	<update id="updateByPrimaryKey" parameterType="Object">
		update sys_dic
		<trim prefix="set" suffixOverrides=",">
			<if test="category != null and category != '' ">
				<![CDATA[ category = #{category}, ]]>
			</if>
			
			<if test="categoryName != null and categoryName != '' ">
				<![CDATA[ category_name = #{categoryName}, ]]>
			</if>
			
			<if test="codeValue != null and codeValue != '' ">
				<![CDATA[ code_value = #{codeValue},]]>
			</if>
			
			<if test="codeText != null and codeText != '' ">
				<![CDATA[ code_text = #{codeText},]]>
			</if>
			
			<if test="sortNo != null">
				<![CDATA[ sort_no = #{sortNo},]]>
			</if>
			
			<if test="editable != null">
				<![CDATA[ editable = #{editable},]]>
			</if>
			
			<if test="enable != null">
				<![CDATA[ enable = #{enable},]]>
			</if>
			
			<if test="remark != null and remark != '' ">
				<![CDATA[ remark = #{remark},]]>
			</if>
			
			<if test="updateBy != null and updateBy != '' ">
				<![CDATA[ update_by = #{updateBy},]]>
			</if>
			
			<if test="updateTime != null">
				<![CDATA[ update_time = #{updateTime},]]>
			</if>
		</trim>
		where id = #{id}
	</update>
	
	<update id="updateAllByPrimaryKey" parameterType="Object">
		update sys_dic
		<trim prefix="set" suffixOverrides=",">
		    <if test="enable != null " >
		  	<![CDATA[  enable = #{enable}, ]]>
		    </if>
		    <if test="updateBy != null and updateBy != '' " >
		  	<![CDATA[  update_by = #{updateBy}, ]]>
		    </if>
		    <if test="updateTime != null " >
		  	<![CDATA[  update_time = #{updateTime}, ]]>
		    </if>
		</trim>
	    where id in
		<foreach item="id" index="index" collection="ids" open="(" separator="," close=")">
		    #{id }
		</foreach>
	</update>
	
	<sql id="whereSql">
		<where>
			1=1
			<if test="id != null">
				and id = #{id}
			</if>
			<if test="category != null and category != ''">
				and category = #{category}
			</if>
			<if test="categoryName != null and categoryName != ''">
				and category_name = #{categoryName}
			</if>
			<if test="codeValue != null and codeValue != ''">
				and code_value = #{codeValue}
			</if>
			<if test="codeText != null and codeText != ''">
				and code_text = #{codeText}
			</if>
			<if test="sortNo != null">
				and sort_no = #{sortNo}
			</if>
			<if test="editable != null">
				and editable = #{editable}
			</if>
			<if test="enable != null">
				and enable = #{enable}
			</if>
		</where>
	</sql>
</mapper>